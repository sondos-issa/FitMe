<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/btnfirstnext"
        android:layout_width="261dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:textSize="16dp"
        android:text="@string/what_is_your_name"
        tools:ignore="SpUsage" />


    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="261dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="@string/enter_your_name"
        android:padding="15dp"
        android:inputType="textPersonName"
        android:text=""
        tools:ignore="Autofill" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:ems="10"
        android:padding="15dp"
        android:text="How tall are you (cm) ?"
        android:textSize="18dp"
        tools:ignore="DuplicateIds,HardcodedText,SpUsage" />

    <EditText
        android:id="@+id/tall"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:ems="10"
        android:layout_gravity="center"

        android:inputType="number"
        android:gravity="center"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="What is your weight?"
        android:textSize="18dp"
        tools:ignore="HardcodedText,SpUsage" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginBottom="92dp"
        android:ems="10"
        android:inputType="number"
        android:layout_gravity="center"
        tools:ignore="Autofill" />

    <Button
        android:id="@+id/btnShow"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:onClick="btnShow_Show"

        android:padding="10dp"
        android:text="Next"
        tools:ignore="HardcodedText,RtlHardcoded,UsingOnClickInXml" />

</LinearLayout>